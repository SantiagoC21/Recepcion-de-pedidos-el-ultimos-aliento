<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane fx:controller="pos.MainController" xmlns:fx="http://javafx.com/fxml">
    <!-- TOP: barra -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding:10; -fx-background-color:#f0fff6;">
            <Label text="SYCOPERU" style="-fx-font-weight:bold; -fx-background-color:#33cc88; -fx-text-fill:white; -fx-padding:6 10; -fx-background-radius:12;"/>
            <Label text="TMRMESA" style="-fx-background-color:#b1f0d2; -fx-padding:6 10; -fx-background-radius:12;"/>
            <Label fx:id="lblFecha" style="-fx-background-color:#e9ffe9; -fx-padding:6 10; -fx-background-radius:12;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblTotalHeader" style="-fx-font-size:18; -fx-font-weight:bold; -fx-text-fill:#ff3f7f;"/>
        </HBox>
    </top>

    <!-- LEFT: pedido + keypad -->
    <left>
        <VBox spacing="8" style="-fx-padding:10;">
            <TableView fx:id="tblPedido" prefWidth="360" prefHeight="320">
                <columns>
                    <TableColumn fx:id="colItem" text="Item" prefWidth="60"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="130"/>
                    <TableColumn fx:id="colCant" text="Cantid" prefWidth="60"/>
                    <TableColumn fx:id="colPrecio" text="Precio" prefWidth="60"/>
                    <TableColumn fx:id="colTotal" text="Total" prefWidth="60"/>
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="8">
                <Label text="TOTAL:" style="-fx-font-weight:bold;"/>
                <Label fx:id="lblTotal" style="-fx-font-weight:bold; -fx-font-size:16;"/>
            </HBox>

            <GridPane hgap="6" vgap="6">
                <columnConstraints>
                    <ColumnConstraints percentWidth="33"/>
                    <ColumnConstraints percentWidth="33"/>
                    <ColumnConstraints percentWidth="33"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints percentHeight="20"/>
                    <RowConstraints percentHeight="20"/>
                    <RowConstraints percentHeight="20"/>
                    <RowConstraints percentHeight="20"/>
                    <RowConstraints percentHeight="20"/>
                </rowConstraints>

                <!-- keypad -->
                <Button text="7" onAction="#onKey" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Button text="8" onAction="#onKey" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Button text="9" onAction="#onKey" GridPane.rowIndex="0" GridPane.columnIndex="2"/>

                <Button text="4" onAction="#onKey" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Button text="5" onAction="#onKey" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Button text="6" onAction="#onKey" GridPane.rowIndex="1" GridPane.columnIndex="2"/>

                <Button text="1" onAction="#onKey" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Button text="2" onAction="#onKey" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Button text="3" onAction="#onKey" GridPane.rowIndex="2" GridPane.columnIndex="2"/>

                <Button text="0" onAction="#onKey" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Button text="." onAction="#onKey" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Button text="BORRA" onAction="#onBorra" GridPane.rowIndex="3" GridPane.columnIndex="2"/>

                <Button text="OK" style="-fx-background-color:#33cc88; -fx-text-fill:white;"
                        onAction="#onOk" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                <Button text="ENTER" style="-fx-background-color:#ff9955; -fx-text-fill:white;"
                        onAction="#onEnter" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
            </GridPane>

            <HBox spacing="8">
                <Button text="ELEGIR CLIENTE" onAction="#onElegirCliente" HBox.hgrow="ALWAYS"/>
                <Button text="PTN CONSULT" disable="true" HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </left>

    <!-- CENTER: zona conmutada (pantallas internas) -->
    <center>
        <StackPane fx:id="contentPane" style="-fx-padding:10;">
            <!-- Panel por defecto: menÃº de platos -->
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <FlowPane fx:id="menuGrid" hgap="12" vgap="12" style="-fx-padding:10;"/>
            </ScrollPane>
        </StackPane>
    </center>

    <!-- BOTTOM: acciones -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding:10; -fx-background-color:#f7f7f7;">
            <Button text="GUARDAR PEDIDOS"/>
            <Button text="IMPORTAR PEDIDO"/>
            <Button text="MODO TEXTO"/>
            <Button text="CAJA"/>
            <Button text="CUENTA"/>
            <Button text="BOLE-F5"/>
            <Button text="FACT-F6"/>
            <Button text="CERRAR" onAction="#onCerrar"/>
        </HBox>
    </bottom>
</BorderPane>
